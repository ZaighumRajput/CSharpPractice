<Window x:Class="hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="523" FontFamily="Verdana" AllowsTransparency="True" WindowStyle="None" Background="#FFFCFCFC">
    <Window.Foreground>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF4D0808" Offset="1"/>
        </LinearGradientBrush>
    </Window.Foreground>
    <Grid Background="#FFFDCE96" Opacity="0.8">
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
