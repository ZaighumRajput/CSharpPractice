<Window x:Class="structVSClass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="525" FontFamily="Verdana">
    <Grid Background="#FF124F36" Height="121" VerticalAlignment="Top" Margin="0,0,0,-1">
        <TextBlock x:Name="outputBox" HorizontalAlignment="Left" Height="101" Margin="256,10,0,0" TextWrapping="Wrap" Text="outputBox" VerticalAlignment="Top" Width="251" RenderTransformOrigin="0.386,0.519" Foreground="#FF3CB221" Opacity="0.6" Background="White" FontFamily="Verdana"/>
        <Button x:Name="run" Content="runExample" HorizontalAlignment="Left" Height="37" Margin="10,10,0,0" VerticalAlignment="Top" Width="241" OpacityMask="Black" BorderThickness="10" Foreground="White" Click="run_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF3CB221" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
